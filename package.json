  "repository": "https://github.com/mirai-audio/mir",
  "scripts": {
    "build": "ember build",
    "coverage": "cat ./coverage/lcov.info | COVERALLS_REPO_TOKEN=$COVERALLS_REPO_TOKEN yarn coveralls",
    "lint": "yarn lint:js && yarn lint:scss && yarn lint:templates",
    "lint:js": "yarn eslint ./*.js app config lib mirage server tests",
    "lint:js:fix": "yarn eslint --fix ./*.js app config lib mirage server tests",
    "lint:scss": "yarn prettier-stylelint app/**/*.scss --quiet",
    "lint:templates": "yarn ember-template-lint app/templates",
    "start": "ember serve",
    "start:mirage": "MIRAGE=true ember serve",
    "start:debug": "echo \"use node version >= v8.4, using: `node --version`\" && DEBUG=ember-cli-fastboot:* node --inspect-brk ./node_modules/.bin/ember serve",
    "test": "COVERAGE=true ember test"
  },
