{{ma-header
  back="routes.welcome.title"
  backTo="welcome"
  title="routes.login.title"
}}

{{#ma-auth
  action=(route-action "signup" model)
  changeset=model
  components=(hash input=(component "ma-input"))
  errorMessageKeys=errorMessageKeys
  title=(t "components.ma-auth.title")}}

  {{ma-login
    action=(route-action "login" model)
    changeset=model
    components=(hash input=(component "ma-input"))
    errorMessageKeys=errorMessageKeys
    title=(t "components.ma-auth.cta-login")}}

  {{#if errorMessageKeys}}
    <p class="notification is-danger">
      {{t errorMessageKeys}}
    </p>
  {{/if}}
{{/ma-auth}}

<fieldset class="field">
  <legend>{{t "components.ma-auth.socialTitle"}}</legend>
  <div class="field has-addons">
    <div class="control">
      <button class="button c-Social c-Social--twitter"
        data-test="twitter"
        onclick={{route-action "loginTwitter"}}>
        {{t "routes.login.cta-twitter"}}
      </button>
    </div>
    <div hidden class="control">
      <button class="button c-Social c-Social--google"
        data-test="google"
        disabled>
        {{t "routes.login.cta-google"}}
      </button>
    </div>
    <div hidden class="control">
      <button class="button c-Social c-Social--facebook"
        data-test="facebook"
        disabled>
        {{t "routes.login.cta-facebook"}}
      </button>
    </div>
  </div>
</fieldset>

{{outlet}}
