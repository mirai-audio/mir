{{! update the <head><title/><head> tag}}
{{title (t title)}}

<nav class="ma-Header-navbar navbar" role="navigation" aria-label="main navigation">
  <div class="ma-Header-brand navbar-brand">
    {{#if backTo}}
      {{link-to (t back) backTo class="navbar-item ma-Header-link ma-Header-link--back"}}
    {{else}}
      <a href=#
        {{action "back"}}
        class="navbar-item ma-Header-link ma-Header-link--back"
        title={{t "components.ma-header.back"}}
        >{{t "components.ma-header.back"}}
      </a>
    {{/if}}

    {{yield}}
  </div>
</nav>

<h1 class="ma-Header-title has-text-centered title is-3">{{t title}}</h1>
