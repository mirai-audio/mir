<fieldset class="field">
  {{#if title}}
    <legend>{{title}}</legend>
  {{/if}}

  <div class="field">
    <label class="label" for="email">
      {{t "routes.login.email"}}
    </label>
    <div class="control">
      {{components.input type="email"
        name="email"
        inputId="email"
        autofocus="autofocus"
        autocorrect="off"
        autocomplete="email"
        class="field"
        errors=(get changeset "error.email.validation")
        minlength="7"
        pattern="\S{1,}@\S{2,}.\S{2,}"
        required="required"
        placeholder=(t "routes.login.email-placeholder")
        value=changeset.email}}
    </div>
  </div>

  <div class="field">
    <label class="label" for="password">
      {{t "routes.login.password"}}
    </label>
    <div class="field has-addons">
      <div class="control is-expanded">
        {{components.input type="password"
          name="password"
          inputId="password"
          autocorrect="off"
          autocomplete="off"
          errors=(get changeset "error.password.validation")
          minlength="12"
          required="required"
          value=changeset.password}}
      </div>

      <div class="control">
        <button onclick={{action action}}
          class="button is-primary"
          data-test="login"
          disabled={{isDisabled}}>
          {{t "components.ma-login.cta-login"}}
        </button>
      </div>
    </div>
  </div>

  {{ma-errors-handler errorMessageKeys=errorMessageKeys}}
</fieldset>
